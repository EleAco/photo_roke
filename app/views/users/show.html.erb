<%= render 'shared/top_header'%>

<div class='user-profile-container'>
  <div class='user-account-container'>
    <div class='user-header-icon'>
      <% if @user.avatar.attached?%>
        <%= image_tag @user.avater, class:'avatar'%>
      <%else%>
        <%= image_tag ("human.png"), class:'avatar'%>
      <% end %>
    </div>
    <div class='user-header-profile'>
      <p class='user-profile-text'>
      ここに紹介文が入ります
      </p>
    </div>
    <div class='follow-container'>
        <%= render "follow_form" %>
    </div>
    <div class="follower">
        <%= link_to followers_user_path(@user.id) do %>
            <h5 style="color: black;">フォロワー<%= @user.followers.count %>人</h5>
        <% end %>
    </div>
    <div class="follow">
        <%= link_to following_user_path(@user.id) do %>
                  <h5 style="color: black;">フォロー<%= @user.following.count %>人</h5>
        <% end %>
    </div>

    <div class='user-edit-label'>
      
  </div>

  <div class='user-photo-container'>  
    <% @photos.each do |photo| %>
      <div class='top-post-wrapper'>
        <div class='top-post-container'>
          <div class='post-user-container'>
            <div class='post-user-header'>
              <div class='post-user-icon'>
                ○
              </div>
              <%= link_to photo.user.nickname, user_path(photo) , class: 'post-user-name'%>
            </div>

            <div class='post-main-photo'>
              <div class='post-user-label'>
                  ○
                </div>

              <div class='post-user-main'>
                <%= image_tag photo.image.variant(resize:'1920x1920').processed, class: 'user-photo'%>
              </div>
            </div>

            <div class='post-footer-container'>
              <div class='post-comment-btn'>
                ○
            </div>
        
          <% end %>
          </div>
        </div>
      </div>
  </div>
</div>