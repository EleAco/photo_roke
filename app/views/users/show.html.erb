<%= render 'shared/post_header'%>
<div class='user-account-container'>
  <div class='user-header-icon'>
    <% if @user.avatar.attached?%>
      <%= image_tag @user.avatar.variant(gravity: :center, resize:"160x160^", crop:"160x160+0+0").processed, class:'avatar'%>
    <%else%>
      <%= image_tag ("avatar.png"), class:'avatar'%>
    <% end %>
  </div>
  <div class='user-header-profile'>
    <p class='user-profile-text'>
      <%= @user.profile%>
    </p>
  </div>

 <div class='follow-wrapper'>
    <div class="follower">
      <%= link_to followers_user_path(@user.id) do %>
        <h5 style="color: black;">フォロワー<%= @user.followers.count %>人</h5>
      <% end %>
    </div>
    <div class="follow">
      <%= link_to following_user_path(@user.id) do %>
        <h5 style="color: black;">フォロー<%= @user.following.count %>人</h5>
      <% end %>
    </div>
  </div>

  <div class='follow-container'>
    <%= render "follow_form", user: @user %>
  </div>
</div>

<div class='top-post-wrapper'>
<% @photos.each do |photo| %>
  <%= render 'photos/photo', photo: photo%>
<% end %>
</div>