<%= render 'shared/post_header'%>
<div class="search-container">
  <%= form_with(url: search_photos_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
    <%= form.submit "検索", class: "search-btn" %>
<% end %> 
</div>

<div class='top-post-wrapper'>
  <% @photo.each do |photo|%>
    <%= render 'photo', photo: photo %>
  <% end %>    
</div>

<div class='purchase-btn'>
  <span class='purchase-btn-text'>投稿する</span>
  <a href= "/photos/new" >
    <%= image_tag 'new.png' ,class: "purchase-btn-icon" %>
  </a>
</div>