<%= render 'shared/post_header'%>
<div class='post-container'>
  <%= form_with(model: @photo, local: true) do |f| %>
  <div class='post-photo-item'>
    <div class="post-photo-text">
      写真
    </div>
    <div class="post-photo-upload">
      <p>
        クリックしてファイルをアップロード
      </p>
      <%= f.fild_field :image, id:'photo-image'%>
    </div>
  </div>

  </div>
  <div class='post-map-item'>

    <div class ='photo-map'>
      <h2>gmap</h2>

      <!-- 地名入力用のinputを追加 -->
      <input id="address" type="textbox" value="東京スカイツリー">

      <!-- buttonをクリックしたらcodeAddressを実行-->
      <input type="button" value="Encode" onclick="codeAddress()">
      <div id='map'>
      </div>

      <style>
      #map{
        height: 300px;
      }
      </style>

      <script>
      /*
      mapを関数の外で定義(codeAddressでも使うため)
      geocoderを用意
      */

      let map
      let geocoder

      function initMap(){
        // geocoderを初期化
        geocoder = new google.maps.Geocoder()

        map = new google.maps.Map(document.getElementById('map'), {
        center: {lat: 35.710063, lng: 139.810700},
        zoom: 8
        });
      }

      function codeAddress(){
        // 入力を取得
        let inputAddress = document.getElementById('address').value;

        // geocodingしたあとmapを移動
        geocoder.geocode( { 'address': inputAddress}, function(results, status) {
          if (status == 'OK') {
      // map.setCenterで地図が移動
            map.setCenter(results[0].geometry.location);

      // google.maps.MarkerでGoogleMap上の指定位置にマーカが立つ
            var marker = new google.maps.Marker({
                map: map,
                position: results[0].geometry.location
            });
          } else {
            alert('Geocode was not successful for the following reason: ' + status);
          }
        });
      }
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?key=GOOGLE_MAP_API_KEY&callback=initMap" async defer></script>
    </div>

  </div>
  <div class='post-introduction-item'>
    <%= f.text_area :name, class:"introduction-text", id:"item-name"%>
  </div>
</div>