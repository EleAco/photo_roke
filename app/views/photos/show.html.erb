<%= render 'shared/top_header'%>

<div class='photo-show-container'>
  <div class='user-profile'>
    <div class='user-image'>
    </div>
    <div class='user-introduction'>
    </div>
    <div class='user-follow-btn'>
      フォローする
    </div>
  </div>

  <div class='user-show-contailer'>
    <div class='user-show-name'>
      <%= @photo.user.nickname%>
    </div>
    <%= image_tag @photo.image, class: 'user-show-photo' %>
    <%= form_with(model: [@photo, @comment], local: true) do |form| %>
      <%= form.text_area :text, placeholder: "コメントする"%>
      <%= form.submit "SEND"%>
    <% end %>

    <div class='comments-table-container'>
      <% if @comments %>
        <% @comments.each do |comment|%>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>:<strong>
            <%= comment.text%>
          </p>
        <%end%>
      <%end%>
    </div>
  </div>
</div>