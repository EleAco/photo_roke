<% if user_signed_in? %>
    <% if photo.favorited_by?(current_user) %>
        <p><span>お気に入り解除: </span><%=link_to photo.favorites.count, "/photos/#{photo.id}/favorites", method: :delete, remote: true %></p>
    <% else %>
        <p><span>お気に入り登録: </span><%=link_to photo.favorites.count, "/photos/#{photo.id}/favorites", method: :post, remote: true %></p>
    <% end %>
<% else %>
    <p><span>お気に入り数: </span><%= photo.favorites.count %></p>
<% end %>